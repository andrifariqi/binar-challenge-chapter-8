<div class="container-fluid" id="login">
  <div class="container" id="login">
    <div class="row justify-content-md-center" id="login">
      <form action="/forgotpassword" method="post">
        <div class="col">
          <label for="validationusername" class="form-label" id="login"
            >Username</label
          >
          <input
            type="username"
            class="form-control"
            id="login"
            name="username"
            placeholder="Username"
            required
          />
        </div>
        <div class="col">
          <label for="validationpassword" class="form-label" id="login"
            >Password</label
          >
          <input
            type="password"
            class="form-control"
            id="login"
            name="password"
            placeholder="Password"
            required
          />
        </div>
        <div class="col">
          <button class="btn btn-light" type="submit">Update Password</button>
        </div>
        <div class="login">
          <span>Have A Member ?</span>
          <a class="login" href="/login">Login</a>
        </div>
      </form>
    </div>
  </div>
</div>
